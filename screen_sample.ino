void setup()
{
  kit.display.setTextSize(1);
  kit.display.setCursor(0,0);
  kit.display.println("Hello, world!");
  kit.display.display();
  kit.display.clearDisplay();
  kit.display.drawBitmap(0, 0,  gf_logo, 128, 64, 1);
  kit.display.display();
}

int col = 0;
int brightness = 150;
int saturation = 255;
void loop()
{
  for (int i = 0; i < 16; i++) {
    kit.setPixelHue(i, (col + (360 / 32) * i) % 360, saturation, brightness, 255);
  }

  col += 1;

  if (kit.touchBottom()) {
    brightness += 8;
    brightness %= 256;

    // Wait up to 100ms or until the button is released
    for(int i = 0; i < 10 && kit.touchBottom(); i++) {
      delay(10);
    }
  }

  if (kit.touchTop()) {
    saturation += 8;
    saturation %= 256;

    // Wait up to 100ms or until the button is released
    for(int i = 0; i < 10 && kit.touchTop(); i++) {
      delay(10);
    }
  }


  kit.fadeLEDs(250);
  kit.updateLEDs();
  delay(10);

}
